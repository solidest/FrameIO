//项目:2.test_udp
project test_udp_receivetimeout {
	//受控对象
	system test_udp_receivetimeout {
		uint head;
		uint len;
		uint end;

		channel CH_UDP_SEND : udp {
			localip = "192.168.0.148";
			localport = 8007;
			remoteip = "192.168.0.148";
			remoteport = 8008;
			waittimeout = 5000;
		}
		channel CH_UDP_RECV : udp {
			localip = "192.168.0.148";
			localport = 8008;
			remoteip = "192.168.0.148";
			remoteport = 8007;
			waittimeout = 5000;
		}

		action A_Send : send frameSR on CH_UDP_SEND {
			HEAD : head;
			LEN : len;
			END : end;
		}
		action A_Recv : recv frameSR on CH_UDP_RECV {
			HEAD : head;
			LEN : len;
			END : end;
		}
	}

	//数据帧
	frame frameSR {
		integer HEAD;
		integer LEN;
		integer END;
	}

}
